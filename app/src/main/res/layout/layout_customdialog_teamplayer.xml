<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:id="@+id/Layout_CustomDialog_TeamPlayer_Root"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:layout_margin="10dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/Layout_CustomDialog_TeamPlayer_Profile"
            android:layout_weight="1"
            android:layout_margin="10dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="New Button"
                android:textColor="@color/White"
                android:background="@color/colorPrimary"
                android:id="@+id/Layout_CustomDialog_TeamPlayer_TeamNameAndDuty"
                android:layout_weight="1"
                android:layout_marginBottom="3dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="New Button"
                android:textColor="@color/White"
                android:background="@color/colorPrimary"
                android:id="@+id/Layout_CustomDialog_TeamPlayer_Name"
                android:layout_weight="1"
                android:layout_marginBottom="3dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="New Button"
                android:textColor="@color/White"
                android:background="@color/colorPrimary"
                android:id="@+id/Layout_CustomDialog_TeamPlayer_Position"
                android:layout_weight="1"
                android:layout_marginBottom="3dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="New Button"
                android:textColor="@color/White"
                android:background="@color/colorPrimary"
                android:id="@+id/Layout_CustomDialog_TeamPlayer_Age"
                android:layout_weight="1"
                android:layout_marginBottom="3dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="182cm/72kg"
                android:textColor="@color/White"
                android:background="@color/colorPrimary"
                android:id="@+id/Layout_CustomDialog_TeamPlayer_Sex"
                android:layout_weight="1"
                android:layout_marginBottom="3dp"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>


