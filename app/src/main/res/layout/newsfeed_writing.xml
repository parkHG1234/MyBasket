<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/NewsFeed_Writing_addDoSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_weight="1" />

        <Spinner
            android:id="@+id/NewsFeed_Writing_addSiSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="@+id/NewsFeed_Writing_addDoSpinner"
            android:layout_alignParentTop="true"
            android:layout_weight="1" />

        <Spinner
            android:id="@+id/NewsFeed_Writing_addCourtSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="@+id/NewsFeed_Writing_addSiSpinner"
            android:layout_alignParentTop="true"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/NewsFeed_Writing_TextEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/NewsFeed_Writing_addSiSpinner"
            android:layout_weight="25"
            android:maxLength="200" />

        <ImageView
            android:id="@+id/NewsFeed_Camera_Image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="20" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="32"
            android:orientation="horizontal">

            <Button
                android:id="@+id/NewsFeed_Writing_CameraButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/NewsFeed_Writing_TextView"
                android:layout_weight="2.1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.1"
                android:text="인원 : "
                android:textSize="30dp" />

            <EditText
                android:id="@+id/NewsFeed_Writing_PersonEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:inputType="number"
                android:textSize="30dp" />

            <Button
                android:id="@+id/NewsFeed_Writing_Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:enabled="false"
                android:text="게시"
                android:textSize="30dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>
</LinearLayout>